{% extends 'base1.html.twig' %}

{% block title %}Les catégories{% endblock %}

{% block stylesheets %}
    {{parent()}}
    <link rel="stylesheet" href="/css/adminSubCategoryListes.css">
{% endblock %}

{% block body %}

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class='container'>
            <a href="{{ path('app_home') }}" class="navbar-brand">Qualideco</a>
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                <div class="navbar-nav">
                    <a href="{{ path('app_admin') }}" class="nav-item nav-link active">Administration</a>
                    <a href="{{ path('app_new_category') }}" class="nav-item nav-link active">Ajout d'une catégorie</a>
                </div>
                <form class="d-flex">
                    <div class="input-group">                    
                        <input type="text" class="form-control" placeholder="Recherche">
                        <button type="button" class="btn btn-secondary"><i class="bi-search"></i>Recherche</button>
                    </div>
                </form>
            </div>
        </div>
    </nav>

    <header>
        <h1 class='text-center py-4'> Liste des catégories </h1>
    </header>

    <div class='container'>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success text-center" role="alert">
                {{ message }}
            </div>
        {% endfor %}

        <table class="table">
            <thead>
                <tr class="table-warning text-center">
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody class='text-center'>
                {% for category in categories %}
                    <tr>
                        <td class="py-3">
                            <div>
                                {{ category.id }}
                            </div>
                        </td>
                        <td class="py-3">
                            <div>
                                {{ category.name }}
                            </div>
                        </td>
                        <td class='py-3'> 
                            <a href="{{ path('app_edit_category', { id: category.id }) }}" title="Editer cette catégorie" id="edit" class="btn btn-sm btn-outline-secondary">Editer</a>
                            
                            <form action="{{ path('category_delete', { id: category.id }) }}" method="post" class="d-inline">
                                <input type="hidden" name="token" value="{{ csrf_token('delete-category-'~ category.id) }}">
                                <button class="btn btn-delete btn-sm btn-outline-danger" id="delete">Supprimer</button>
                            </form>    
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

        {{ knp_pagination_render(categories, null, {}, {
            'align': 'center',
            'size': 'small',
            'rounded': true,
        }) }}

{% endblock %}

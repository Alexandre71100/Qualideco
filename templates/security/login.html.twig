{% extends 'base1.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block stylesheets %}
    {{parent()}}
    <link rel="stylesheet" href="/css/login.css">
{% endblock %}

 {% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/login.js') }}" defer></script>
{% endblock %} 


{% block body %}

    <section class="body">
        <div class="container">
            <div class="login-box">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="logo">
                            <span class="logo-font">Qua</span><span class="logo-l">L</span><span class="logo-font">i</span>deco
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <h3 class="header-title">Connexion</h3>
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}
                        <form class="login-form" method="post">
                            <div class="form-group">
                                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" placeholder="Adresse Email" class="form-control" autocomplete="email" required autofocus>
                            </div>
                            <div class="form-group">
                                <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Mot de passe" autocomplete="current-password" required>
                                <a href class="forgot-password" onclick="showPassword()"><i class="bi bi-eye-slash"></i></a>
                            </div>
                            <a href="#!" class="forgot-password">Mot de passe oubli√©?</a>
                            <input type="hidden" name="_csrf_token"
                                value="{{ csrf_token('authenticate') }}"
                            >

                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                            <div class="form-group">
                            <div class="checkbox mb-3">
                                <label>
                                    <input type="checkbox" name="_remember_me"> Se souvenir de moi
                                </label>
                            </div>
                                <button class="btn btn-primary btn-block">Connexion</button>
                            </div>
                            <div class="form-group">
                                <div class="text-center">Nouveau membre? <a href="{{ path('app_register') }}">S'inscrire maintenant</a></div>
                            </div>
                        </form>
                    </div>
                
                </div>
            </div>
        </div>
    </section>

{% endblock %}

